<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SummaryActivity">

    <ImageView
        android:layout_width="@dimen/margin_300dp"
        android:layout_margin="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_70dp"
        android:src="@drawable/conquest1"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_id"
            android:textSize="@dimen/textsize_20sp"
            android:textColor="@color/black_000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_45dp"
            android:id="@+id/login_id_edit_text"
            android:padding="@dimen/margin_5dp"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:hint="@string/login_id"
            android:background="@drawable/digi_screen"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="@dimen/textsize_20sp"
            android:textColor="@color/black_000"/>

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:padding="@dimen/margin_5dp"
            android:background="@drawable/digi_screen"
            android:hint="@string/password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="@dimen/textsize_20sp"
            android:textColor="@color/black_000"/>

        <Button
            android:id="@+id/pick_date_btn"
            android:text="Pick Date"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setDate"/>

        <TextView
            android:id="@+id/date_text_view"
            android:textSize="20sp"
            android:textColor="@color/black_000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:text="Get Summary"
        android:id="@+id/submit_summary_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</LinearLayout>